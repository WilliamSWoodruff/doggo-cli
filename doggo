#!/usr/bin/env node

'use strict';

const Program = require('commander');
const Fs = require('fs');
const Spawn = require('child_process').spawn;
const Knex = require('knex');
const DoggoNative = require('doggo')('native');

const dbPath = `${__dirname}/lib/doggo.sqlite`;

// Init the db if not there, then re-run the doggo command
if(!Fs.existsSync(dbPath)) {

    Fs.writeFileSync(dbPath, '');

    const dbUtils = require('./lib/doggo-cli-db')(Program, DoggoNative);
    const db = dbUtils.db;

    db.migrate.latest()
    .then(() => {

        db('Settings')
        .insert({
            id: 1,
            keepUnlocked: 1
        }).
        then(() => {

            dbUtils.destroy();
            const args = process.argv.slice(2);
            const doggoProcess = Spawn('doggo', args);
            doggoProcess.stdout.pipe(process.stdout);
        })
        .catch(dbUtils.onErrorDestroy);
    })
    .catch(dbUtils.onErrorDestroy);

    return;
};

const dbUtils = require('./lib/doggo-cli-db')(Program, DoggoNative);
const db = dbUtils.db;

const internals = {};

Program
    .version('0.0.1')
    .description('A cli for creating and sharing secure passwords, texts, and files');

Program
    .command('meme')
    .description('Gimme Doggo memes!')
    .action(() => {

        Spawn('open', ['https://www.facebook.com/pg/borkINC/posts']);
    });

require('./lib/doggo-cli-db')(Program, DoggoNative);
require('./lib/doggo-cli-utils')(Program, DoggoNative);
require('./lib/doggo-cli-user')(Program, DoggoNative);
require('./lib/doggo-cli-remote')(Program, DoggoNative);
require('./lib/doggo-cli-group')(Program, DoggoNative);
// require('./lib/doggo-cli-organization')(Program, DoggoNative);
require('./lib/doggo-cli-secure')(Program, DoggoNative);
require('./lib/doggo-cli-gpg')(Program, DoggoNative);
require('./lib/doggo-cli-find')(Program, DoggoNative);
require('./lib/doggo-cli-client')(Program, DoggoNative);

Program
    .command('*')
    .action(() => {

        Program.help();
    });

if (!process.argv.slice(2).length) {
    Program.help();
}

Program.parse(process.argv);
